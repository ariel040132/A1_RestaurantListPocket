<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" style="display: inline-block;">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">
          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
            <input
              type="text"
              name="keywords"
              class="form-control"
              placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..."
              aria-describedby="button-addon2"
              value="{{keywords}}"
            />
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
          <div class="sort-group">
            <select class="form-select" id="sort-select" name="sort">
              <option value="useless">選擇排序方式</option>
              <option value="asc">A > Z</option>
              <option value="desc">Z > A</option>
              <option value="category">類別</option>
              <option value="location">地區</option>
            </select>
          </div>
        </div>
      </form>

    </div>
  </div>
  <script>
    const sortSelect = document.getElementById('sort-select');
    sortSelect.addEventListener('change', (event) => { const sortType =
    event.target.value; window.location.href = '/?sort=' + sortType; });
  </script>

</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurantData}}
          {{! this.id 會 error; 請使用 this._id }}
          <div class="rest-card-container">
            <a href="/restaurants/{{this._id}}" class="text-secondary">
              <div class="card mb-3">
                <img
                  class="card-img-top"
                  src="{{this.image}}"
                  alt="{{this.name}}"
                />
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i>
                    {{this.category}}
                  </div>

                  <span
                    class="badge badge-pill badge-danger font-weight-normal"
                  >
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>

                </div>
              </div>
            </a>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit"><button
                  class="btn btn-link btn-sm"
                >編輯</button></a>
              <a href="/restaurants/{{this._id}}"><button
                  class="btn btn-link btn-sm"
                >詳細</button></a>
              <form
                action="./restaurants/{{this._id}}?_method=DELETE"
                method="POST"
                id="delete-form"
              >
                <button
                  type="submit"
                  class="btn btn-danger btn-sm text-white"
                  onclick="return confirm('確定要刪除這家餐廳嗎？')"
                >刪除</button>

              </form>
            </div>
          </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="create-btn">
  <a
    href="/restaurants/new"
    style="text-decoration:none; font-size:large; color:white"
  >+</a>
</div>