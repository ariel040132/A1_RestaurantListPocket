<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurant List</title>
    {{! /stylesheets 前面不可以添加斜槓/public }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css
"
    />
    <link rel="stylesheet" href="/stylesheets/global.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css"
    />

  </head>

  <body>
    <header>
      <!-- navigation -->
      <nav class="navbar navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img
              src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
              width="30"
              height="30"
              class="d-inline-block align-top"
              alt="我的餐廳清單"
            />
            {{#if isAuthenticated}}{{user.name}}'s{{/if}}
            Pocket List For Restaurant
          </a>
        </div>
        {{#if isAuthenticated}}
          <a href="/users/logout" class="btn btn-outline-dark">Logout</a>
        {{else}}
          <a href="/users/login" class="btn btn-outline-dark">Login</a>
        {{/if}}
      </nav>

      <div class="banner"></div>

    </header>

    <!-- partial templates will replace the part of "body" here -->
    {{{body}}}

    {{! /javascripts 前面不可以添加斜槓/public }}
    <script src="/javascripts/popper.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script
      src="https://kit.fontawesome.com/93809ca2de.js"
      crossorigin="anonymous"
    ></script>
  </body>

</html>